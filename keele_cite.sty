%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%  Defines MN style-like citations \ncite and \scite (which are much
%  more useful than \shortcite)
%  When
%       ... \ncite{bloggs-60} ... \scite{bloggs-60} ...
%  appears in the input file,
%       ... Bloggs 1960 ... Bloggs (1960) ...
%  appears in the final document.
%
% NB note \scite is not suitable for use with more than one ref eg
% \scite{bloggs1,bloggs2} 
% as the location of the brackets gets screwed up
%    
% APB 1996-Feb-12
%
%%%%%%%
% Added commands \citet, \citep, \citealt for natbib users.
% Note that \citet suffers from the \scite issue mentioned above.
%
% Also added a pile of journal name macros, allowing ADS
% bibtex entries to be used without changing \apj to APJ.
%
% DFE 2017-05-18
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\def\@ncite#1#2{{#1\if@tempswa , #2\fi}}
\def\@scite#1#2{{#1\if@tempswa , #2\fi})}
%\def\@biblabel#1{}

%
% \ncite - citation with no brackets eg Jones 1990
%
\def\@citexn[#1]#2{%
  \if@filesw\immediate\write\@auxout{\string\citation{#2}}\fi
  \def\@citea{}\@ncite{\@for\@citeb:=#2\do
    {\@citea\def\@citea{; }\@ifundefined
       {b@\@citeb}{{\reset@font\bf ?}\@warning
       {Citation `\@citeb' on page \thepage \space undefined}}%
{\csname b@\@citeb \endcsname}}}{#1}}
%
\def\ncite{\def\citename##1{##1}\@ifnextchar[{\@tempswatrue\@citexn}{\@tempswafalse\@citexn[]}}
%\def\ncite{\def\citename##1{##1}\@citexn[]}

%
% \scite - citation with brackets around  the year eg Jones (1990)
%
\def\@citexs[#1]#2{%
  \if@filesw\immediate\write\@auxout{\string\citation{#2}}\fi
  \def\@citea{}\@scite{\@for\@citeb:=#2\do
    {\@citea\def\@citea{, }\@ifundefined
       {b@\@citeb}{{\reset@font\bf ?}\@warning
       {Citation `\@citeb' on page \thepage \space undefined}}%
{\csname b@\@citeb \endcsname}}}{#1}}
%
\def\scite{\def\citename##1{##1(}\@ifnextchar[{\@tempswatrue\@citexs}{\@tempswafalse\@citexs[]}}
%\def\scite{\def\citename##1{##1(}\@citexs[]}

\def\citep{\cite}
\def\citet{\scite}
\def\citealt{\ncite}

